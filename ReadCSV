package Amazon.csv;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

public class CSVReader {

    public static void main(String[] args) {

        String csvFile = "C:\Users\Cindy Zuo\Documents\Cindy\1B\TOHacks\Amazon.csv";
        BufferedReader br = null;
        String line = "";
        String cvsSplitBy = ",";
		FileWriter fileWriter = new FileWriter(Results.csv);
		PrintWriter printWriter = new PrintWriter(fileWriter);
		printWriter.print("Website,Category,Product_name,Rating,Review");

        try {

            br = new BufferedReader(new FileReader(csvFile));
            while ((line = br.readLine()) != null) {
                // use comma as separator
                String[] country = line.split(cvsSplitBy);
				// print in the file				
				printWriter.printf(Amazon[0]+","+Amazon[1]+","+Amazon[2]+","+Amazon[3]);				
                // System.out.println("Country [code= " + Amazon[4] + " , name=" + country[5] + "]");
            }

        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        } finally {
            if (br != null) {
                try {
                    br.close();
					printWriter.close();
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }

    }

}
